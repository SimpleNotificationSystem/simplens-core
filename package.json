{
  "name": "backend-notification-service",
  "version": "1.0.0",
  "description": "Lightweight, backend notification service for sending EMAIL and WHATSAPP messages. It supports single and batch notifications, scheduled deliveries and webhook callbacks for final delivery status.",
  "main": "dist/api/server.js",
  "type": "module",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "build": "tsc && tsc-alias",
    "start": "node dist/api/server.js",
    "dev": "tsx watch src/api/server.ts",
    "worker": "node dist/workers/worker.js",
    "worker:dev": "tsx watch src/workers/worker.ts",
    "email-processor": "node dist/processors/email/email.processor.js",
    "email-processor:dev": "tsx watch src/processors/email/email.processor.ts",
    "whatsapp-processor": "node dist/processors/whatsapp/whatsapp.processor.js",
    "whatsapp-processor:dev": "tsx watch src/processors/whatsapp/whatsapp.processor.ts",
    "delayed-processor": "node dist/processors/delayed/delayed.processor.js",
    "delayed-processor:dev": "tsx watch src/processors/delayed/delayed.processor.ts",
    "processor": "node dist/processors/unified/unified.processor.js",
    "processor:dev": "tsx watch src/processors/unified/unified.processor.ts",
    "recovery": "node dist/workers/recovery/recovery.service.js",
    "recovery:dev": "tsx watch src/workers/recovery/recovery.service.ts",
    "prepare": "husky"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Adhish-Krishna/backend-notification-service.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Adhish-Krishna/backend-notification-service/issues"
  },
  "homepage": "https://github.com/Adhish-Krishna/backend-notification-service#readme",
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/express-rate-limit": "^5.1.3",
    "@types/helmet": "^0.0.48",
    "@types/ioredis": "^4.28.10",
    "@types/kafkajs": "^1.8.2",
    "@types/mongoose": "^5.11.96",
    "@types/node": "^24.10.1",
    "@types/nodemailer": "^7.0.4",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^10.0.0",
    "@vitest/coverage-v8": "^4.0.15",
    "husky": "^9.1.7",
    "ioredis-mock": "^8.13.1",
    "mongodb-memory-server": "^10.4.1",
    "supertest": "^7.1.4",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.15"
  },
  "dependencies": {
    "simplens-plugin-gmail": "^1.0.0",
    "simplens-sdk": "^1.0.1",
    "axios": "^1.13.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "express-rate-limit": "^8.2.1",
    "helmet": "^8.1.0",
    "ioredis": "^5.8.2",
    "kafkajs": "^2.2.4",
    "mongoose": "^9.0.0",
    "nodemailer": "^7.0.11",
    "uuid": "^13.0.0",
    "winston": "^3.18.3",
    "winston-loki": "^6.1.3",
    "yaml": "^2.8.2",
    "zod": "^4.1.13"
  }
}